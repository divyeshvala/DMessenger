<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBF1F1"
    tools:context=".ContactsUsers.FindUsersActivity">

    <RelativeLayout
        android:id="@+id/header_findUsers"
        android:layout_width="match_parent"
        android:background="#20495A"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts On DMessenger"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/friends_Pic_messages"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/usersList_recyclerview"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/header_findUsers"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>