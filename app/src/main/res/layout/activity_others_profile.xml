<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".Profile.OthersProfileActivity">
    
    <ImageView
        android:id="@+id/image_othersProfile"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/profile"
        />

    <TextView
        android:id="@+id/name_othersProfile"
        android:layout_below="@+id/image_othersProfile"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:background="#FCF9F9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        />

    <TextView
        android:id="@+id/aboutTV_othersProfile"
        android:layout_below="@+id/name_othersProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="About"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:background="#FCF9F9"
        />
    
    <TextView
        android:id="@+id/about_othersProfile"
        android:layout_below="@+id/aboutTV_othersProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="      Hey there I am using something"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="#FCF9F9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/about_othersProfile"
        android:layout_marginTop="1dp"
        android:background="#FCF9F9"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phoneTV_othersProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number : "
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/phone_othersProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            />

    </LinearLayout>

</RelativeLayout>