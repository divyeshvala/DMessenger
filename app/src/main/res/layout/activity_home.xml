<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E9EB"
    tools:context=".ChatUsers.HomeActivity">

    <RelativeLayout
        android:id="@+id/header_chatActivity"
        android:layout_width="match_parent"
        android:background="#1083B6"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DMessenger"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/friends_Pic_messages"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/settings_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/settings"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chatList_recyclerView"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/header_chatActivity"
        >
    </android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/findUsers_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:background="@drawable/messages"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        />

</RelativeLayout>