<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity">


    <TextView
        android:id="@+id/getUserDetails_title_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify phone number"
        android:textColor="#4B0606"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/country_code_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:hint="+235"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/phoneNumber_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="  phone no                 "
        android:layout_toRightOf="@+id/country_code_ET"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/getCode_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Get Code"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/phoneNumber_ET"
        />

    <EditText
        android:id="@+id/code_ET"
        android:layout_below="@+id/phoneNumber_ET"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Verification Code"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/phoneNumber_ET"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/error_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_below="@+id/submit_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/getUserDetails_addPhoto_TV"
        android:layout_below="@+id/getUserDetails_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your profile pic by clicking on this image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        />



    <ImageView
        android:id="@+id/getUserDetails_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/getUserDetails_addPhoto_TV"
        android:src="@drawable/profile" />


    <EditText
        android:id="@+id/getUserDetails_name_ET"
        android:layout_below="@+id/getUserDetails_addPhoto_TV"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:hint="Type your name here"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/done_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done!!"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"

        />
    <Button
        android:id="@+id/skip_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.ChasingDots"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:SpinKit_Color="#9ED5EC" />

</RelativeLayout>